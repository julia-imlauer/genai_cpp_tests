{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", ".",                // Source directory
                "-B", "build",            // Build directory
                "-DCMAKE_BUILD_TYPE=Debug" // Debug flag
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "compile-tests",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",       // Build the project
                "--target", "TestMathOperations" // Explicitly build the test target
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": "build"
        }
    ]
}
